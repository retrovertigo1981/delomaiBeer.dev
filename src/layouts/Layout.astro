---
//JS
const { title } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const description =
  "Cervecería Délomai, es una microcerveceria artesanal que nació en el año 2019 con el propósito de obtener y transmitir, experiencias únicas mediante la combinación de cuatro ingredientes naturales, el agua, la malta, el lúpulo y la levadura, cada uno de ellos manifestando sus sabores y propiedades que dan origen a una cerveza natural, organica y libre de aditivos.";
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width' />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name='title' content={title} />
    <meta name='description' content={description} />
    <link rel='canonical' href={canonicalURL} />

    <!-- Global Metadata -->
    <meta name='google' content='notranslate' />
    <link
      rel='apple-touch-icon'
      sizes='76x76'
      href='icons/apple-touch-icon.png'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='32x32'
      href='icons/favicon-32x32.png'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='16x16'
      href='icons/favicon-16x16.png'
    />
    <link rel='manifest' href='icons/site.webmanifest' />
    <link rel='mask-icon' href='icons/safari-pinned-tab.svg' color='#d0a35c' />
    <meta name='msapplication-TileColor' content='#da532c' />
    <meta name='theme-color' content='#000000' />

    <!-- Open Graph / Facebook -->
    <meta property='og:locale' content='es_ES' />
    <meta property='og:type' content='website' />
    <meta property='og:url' content={canonicalURL} />
    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />
    <meta
      property='og:image'
      content='https://i.postimg.cc/8c0HC2Q5/cerveza-delomai-web.png'
    />

    <!-- Twitter -->
    <meta name='twitter:card' content='summary_large_image' />
    <meta name='twitter:title' content={title} />
    <meta name='twitter:description' content={description} />
    <meta
      name='twitter:image'
      content='https://i.postimg.cc/8c0HC2Q5/cerveza-delomai-web.png'
    />
    <meta name='twitter:image:alt' content={title} />
    <meta name='twitter:site' content='@gndx' />
    <meta name='twitter:creator' content='@gndx' />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Beth+Ellen&family=Roboto:wght@300;500&display=swap");

  @font-face {
    font-family: RootBeer;
    src: url("/fonts/Root\ Beer.otf"), local("Root Beer");
    font-weight: bold;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-size: 62.5%;
    font-family: "Roboto", sans-serif;
    background: #000000;
    background-size: 224px;
    max-width: 1600px;
    margin: 0 auto;
  }
</style>
